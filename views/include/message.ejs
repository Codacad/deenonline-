<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="../../css/main.css">
    <title>Message</title>
</head>
<body>
    <% if(typeof data != "undefined") { %>
        <div class="messages" id="messages">
            <div class="container">
                <a href="/" class="btn btn-dark mb-4" role="button">Return to Home Page</a>
                <h3 class="text-white mb-3"> 
                    <button type="button" class="btn btn-sm btn-warning">
                        Inbox <span class="badge bg-secondary"><%=data.length%></span>
                      </button>
                      <!-- <a href="/messages/clear_inbox" class="btn btn-sm btn-success">Delete All</a> -->
                    </h3>
                    <% if(data.length != 0) {%>
                        <% data.forEach((message) =>  { %>
                            <div class="message">
                                <div class="card">
                                    <div class="card-header">
                                        <div class="profile-img">
                                            <img src="icons/avatar.svg" alt="">
                                        </div>
                                        <div class="name-contact">
                                            <h5 class="name"><%= message.name %></h5>
                                            <span class="phonenumber"><%= message.phonenumber%></span>
                                            <a href="mailto:<%=message.email%>"><span class="email"><%=message.email%></span></a>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <p><%=message.message%></p>
                                    </div>
                                </div>
                                <div class="edit-delete-btn">
                                    <a href="/messages/<%=message._id%>" class="delete">Delete</a>
                                </div>
                            </div>
                        <% }) %>
                    <%} else { %>
                        <div class="empty-inbox">
                            No Messages.....
                        </div>
                    <%}%>
            </div>
        </div>
    <% } %>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <script src="../../js/main.js"></script>
</body>
</html>